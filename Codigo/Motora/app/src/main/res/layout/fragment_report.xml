<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ui.report.ReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewReportarErro"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-100dp"
            android:gravity="center"
            android:text="Reportar erro"
            android:textColor="#5D9C76"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/my_border_report"
            android:backgroundTint="#EEF1F4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/baseline_info" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encontrou algum erro?"
                    android:textColor="#545F71"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reporte com detalhes para que nossa equipe possa solucionar."
                    android:textColor="#545F71" />
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEscreverReport"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="241dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextReport"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:background="@drawable/my_border_report"
                android:hint="Reporte aqui"
                android:text="Reporte aqui"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonEnviarReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:text="Enviar"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_send"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />

        <TextView
            android:id="@+id/textViewSugerir"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Sugestões"
            android:textColor="#5D9C76"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEscreverSugestao"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="241dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextSugestao"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:background="@drawable/my_border_report"
                android:hint="Sugestão"
                android:text="Escreva-nos alguma possível melhoria que gostaria de ver aqui."
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonEnviarSugestao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:text="Sugerir"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_send"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />

    </LinearLayout>

</ScrollView>