<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/listAvaliacaoImage"
            android:src="@drawable/aptidao_icon"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:background="@color/green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/avaliacaoTitulo"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/listAvaliacaoImage"
            android:text="Abdominais Por Minuto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/alunoEData"
            android:textSize="16sp"
            android:layout_toEndOf="@id/listAvaliacaoImage"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/gray"
            android:text="Fulano de tal, 22/11/2023"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>